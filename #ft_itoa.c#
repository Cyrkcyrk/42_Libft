#include <unistd.h>

char	*ft_itoa(int nb)
{
	char	*ret;
	int		len;
	int		pos;
	long	buffer;
	long	tmp;

	tmp = (long)nb;
	len = 0;
	while ((tmp = tmp / 10) > 0)
		len++;

	}
	if (tmp < 0)
	{
		tmp = -tmp;
		ft_putchar('-');
	}
	buffer = tmp % 10;
	if (tmp / 10 != 0)
		ft_putnbr(tmp / 10);
	ft_putchar(buffer + '0');
}
